
<%= form_with(Model:@Bug, url: bug_comment_path(bug), local: true, method: :put) do |f| %>

  <div class="form-group">
    <%= f.label :comments, "Comments", class: 'form-label'  %><br />
    <%= f.text_field :comments, autofocus: true , class:'form-control', id:'assgin-bar', placeholder: 'maximum of 50 characters' %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Add" , class: 'btn btn-primary' %>
  </div>

<% end %>